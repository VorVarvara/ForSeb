<div class="tulip-tracker">
    <h2>Days Since i thought i'd get my flowers</h2>
    <p>Time has flown by, and still no tulips...</p>
    <p id="tulipCountdown"></p>
</div>

<script>
    const startDate = new Date("2025-02-14T00:00:00").getTime(); // Starting point: February 14, 2025
    
    const countdownFunction = setInterval(function() {
        const now = new Date().getTime(); // Get current date and time
        const distance = now - startDate; // Calculate time difference (in milliseconds)
        
        const daysPassed = Math.floor(distance / (1000 * 60 * 60 * 24)); // Convert milliseconds to days
        
        document.getElementById("tulipCountdown").innerHTML = `${daysPassed} days since the day i thought i'll get them. Still waiting for tulips!`;
    }, 1000);
</script>


